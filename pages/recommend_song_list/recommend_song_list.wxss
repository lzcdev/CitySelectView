.header {
}

.headerBg {
  width: 100%;
  height: 340rpx;
  background-attachment: fixed;
  background-position: center;
  background-size: cover;
  position: relative;
}

.header_msg {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 340rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  background: inherit;
  overflow: hidden;
}

.header_msg::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: inherit;
  background-attachment: fixed;
  filter: blur(6rpx);
}

.header_msg::after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.25);
}

.coverImg {
  width: 240rpx;
  height: 240rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  z-index: 1;
  position: relative;
}

.creator {
  z-index: 1;
  position: relative;
}

.creator_name_detail {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.creator_title {
  font-size: 30rpx;
  width: 400rpx;
  margin-top: 60rpx;
  color: #fff;
}

.creator_name {
  font-size: 26rpx;
  width: 360rpx;
  color: #fff;
  margin-left: 20rpx;
}

.avatarUrl {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
}

.song_list {
  position: absolute;
  top: 300rpx;
  width: 100%;
  background: #fff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.playCount {
  margin: 5rpx 10rpx 0 0;
  text-align: right;
  color: #fff;
  font-size: 20rpx;
}

.list {
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
}

.songlist_img {
  width: 100rpx;
  display: flex;
  justify-content: space-between;
  margin-left: 20rpx;
}

.index {
  color: #aaa;
  font-size: 24rpx;
  margin-left: 40rpx;
}

.name {
  font-size: 28rpx;
  margin-left: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  width: 500rpx;
}

.playBtn {
  width: 32rpx;
  height: 32rpx;
}

.more {
  width: 32rpx;
  height: 32rpx;
}
